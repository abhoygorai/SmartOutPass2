<%- include('partials/header') %>

    <div class="container-fluid main">
        <div class="container-fluid contents">

            <h1 class="titleText"><%= interfaceText %></h1>
            <h5 style="opacity: 80%;"><%= interfaceSubText %></h5>

            <form class="form-1" method="post" action="/guard">
                <div class="mb-3">
                    <input required type="text" class="form-control" placeholder="Enter UID" name="uidData">
                </div>
                <button type="submit" class="btn btn-danger" id="auth-submit-button">Submit</button>
            </form>

            <% if(messageText == "Verrified"){ %>
                <div class="alert alert-success" role="alert">
                    <%= messageText %>
                </div>
            <% }else if(messageText != ""){ %>
            <div class="alert alert-danger" role="alert">
                <%= messageText %>
            </div>
            <% } %>

        </div>
    </div>

</body>

</html>