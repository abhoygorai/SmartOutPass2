<%- include('partials/header') %>

    <div class="container-fluid main">
        <div class="container-fluid contents">


            <h1 class="titleText">
                <%= authPageTitle %>
            </h1>

            <form class="form-1" method="post" action="/hostel/login">
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" name="username" class="form-control" required value=<%=filledUsername %>>
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-danger" id="auth-submit-button">Login</button>
            </form>

            <% if(messageText !="" && messageText != undefined){ %>
                <div class="alert alert-danger" role="alert">
                    <%= messageText %>
                </div>
            <% } %>

        </div>
    </div>

</body>

</html>